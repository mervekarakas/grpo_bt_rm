# ---- paths (portable defaults) ----
export GRPO_BT_RM_ROOT="${GRPO_BT_RM_ROOT:-$HOME/grpo_bt_rm}"
export HF_HOME="${HF_HOME:-$GRPO_BT_RM_ROOT/hf_home}"
export HF_DATASETS_CACHE="${HF_DATASETS_CACHE:-$HF_HOME/datasets}"
unset TRANSFORMERS_CACHE

# ---- wandb ----
export WANDB_PROJECT="${WANDB_PROJECT:-grpo_bt_rm}"
# export WANDB_ENTITY="arni_ucla"     # optional
# export WANDB_RUN_NAME="..."         # based on the configuration
# export WANDB_API_KEY="..."          # DO NOT COMMIT; set locally

# ---- python import path (important) ----
# (scripts/setup_env.sh will export this automatically too)
# export PYTHONPATH="$REPO_ROOT/src:$REPO_ROOT:${PYTHONPATH:-}"

# ---- default reward plugin behavior ----
export BT_SCORE_PARSER="${BT_SCORE_PARSER:-score5_last}"   # or score100_first
export BT_DELTA_TEMP="${BT_DELTA_TEMP:-10}"
export BT_DELTA_CLIP="${BT_DELTA_CLIP:-10}"
export BT_DELTA_NEG_CLIP="${BT_DELTA_NEG_CLIP:-0}"        # 0 = pos-only clip by default
export BT_REWARD_SCALE="${BT_REWARD_SCALE:-1}"
